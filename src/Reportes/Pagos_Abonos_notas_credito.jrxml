	<parameter name="numDoc" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT pag_frmpag,pag_fecha,b.razon_social,b.rif,b.pers_id,a.numdoc_orig,a.inv_coddoc,a.inv_codpro,
       a.inv_numdoc,a.inv_compcontab, a.inv_unidad,a.inv_precio,a.inv_costo,a.inv_porcent_dscto,
       a.inv_despro,SUM(inv_base) AS inv_base, SUM(inv_mtoiva) AS inv_mtoiva, SUM(inv_total) AS inv_total, 
       inv_fecha, inv_fchdoc, inv_condic, inv_cred_dias, inv_codven, inv_status_action, inv_status,
       type_doc_ori,
       IF(ISNULL((SELECT SUM(inv_total) FROM dninventario
                  INNER JOIN dnpersonas ON dnpersonas.pers_id=dninventario.pers_id
	        WHERE (numdoc_orig IS NOT NULL) AND (inv_status='Aplicada' OR inv_status='Abono') AND
                         rif=b.rif AND numdoc_orig=a.numdoc_orig AND inv_coddoc='CRE')), 0, 
                 (SELECT SUM(inv_total) FROM dninventario 
	        INNER JOIN dnpersonas ON dnpersonas.pers_id=dninventario.pers_id
	        WHERE (numdoc_orig IS NOT NULL) AND (inv_status='Aplicada' OR inv_status='Abono') AND
                         rif=b.rif AND numdoc_orig=a.numdoc_orig  AND inv_coddoc='CRE')) AS pagos,
      (SELECT SUM(inv_total) FROM dninventario  
       INNER JOIN dnpersonas ON dnpersonas.pers_id=dninventario.pers_id
       INNER JOIN dndocumentos ON dndocumentos.doc_codigo=inv_coddoc
       WHERE (numdoc_orig IS NULL) AND dndocumentos.doc_cobros=1 AND rif=b.rif AND inv_numdoc=a.numdoc_orig 
       GROUP BY inv_numdoc) AS mtoDoc,
     ((SELECT SUM(inv_total) FROM dninventario  
       INNER JOIN dnpersonas ON dnpersonas.pers_id=dninventario.pers_id
       INNER JOIN dndocumentos ON dndocumentos.doc_codigo=inv_coddoc
       WHERE (numdoc_orig IS NULL) AND dndocumentos.doc_cobros=1 AND rif=b.rif AND inv_numdoc=a.numdoc_orig GROUP BY inv_numdoc)-a.inv_total) AS saldo
FROM dninventario AS a
INNER JOIN dnpersonas AS b ON b.pers_id=a.pers_id
LEFT JOIN dnpagos ON dnpagos.numdoc_orig=a.inv_numdoc
INNER JOIN dndocumentos ON dndocumentos.doc_codigo=inv_coddoc
WHERE a.inv_empresa=$P{empresa} AND (a.numdoc_orig IS NOT NULL) AND (inv_status='Aplicada' OR
      inv_status='Abono') AND rif=$P{idFiscal} AND inv_coddoc='CRE' AND a.numdoc_orig=$P{numDoc}
GROUP BY a.pers_id,a.inv_numdoc,a.numdoc_orig
ORDER BY a.numdoc_orig;]]>
	</queryString>
